<!DOCTYPE html>
<html>
  <head>
    <title>JokesOnUs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>

  <div class="banner">
      <%= image_tag "joke_banner.jpg", class: "banner-img" %>
    </div>

    <ul class="nav">
      <li><%= link_to "Comedians", users_path %></li>
      <li><%= link_to "Clubs", clubs_path %></li>
      <li><%= link_to "Top Jokes", jokes_path %></li>

      <% if @current_user %>
        <b><li style="color:white;" class="right">Hello <%= link_to @current_user.name, user_path(@current_user) %> </li></b>
        <li class="right"><%= link_to "Log Out", logout_path, method: :delete %></li>
      <% else %>
        <li class="right"><%= link_to "Login", new_login_path %></li>
        <li class="right"><%= link_to "Sign Up", new_user_path %></li>
      <% end %>
    </ul>
    </ul>
    <%= yield %>
  </body>
</html>
