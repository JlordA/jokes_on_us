<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <div style="color: red"><%= error %></div>
        <% end %>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :user_name %>
    <%= f.text_field :user_name %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :bio %>
    <%= f.text_field :bio %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :hometown %>
    <%= f.text_field :hometown %>

    <%= f.label "Profile Picture URL" %>
    <%= f.text_field :pic %>
    
    <%= f.submit %>
<% end %>