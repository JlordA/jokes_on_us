<div  style="text-align: center">
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>
</div>

<div style="text-align: center">
<%= form_for(@user) do |f| %>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>
    
    <%= f.label :email %><br>
    <%= f.email_field :email %><br>

    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :bio %><br>
    <%= f.text_field :bio %><br>

    <%= f.label :age %><br>
    <%= f.number_field :age %><br>

    <%= f.label :hometown %><br>
    <%= f.text_field :hometown %><br>

    <%= f.label "Profile Picture URL" %><br>
    <%= f.text_field :pic %><br>
    
    <%= f.submit %>
<% end %>
</div>