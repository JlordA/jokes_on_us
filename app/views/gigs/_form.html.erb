<div  style="text-align: center">
<% if flash[:gig_errors] %>
    <% flash[:gig_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>
</div>

<div style="text-align: center">


<%= form_for(@gig) do |f| %>
    <%= f.label :club %><br>
    <%= f.collection_select :club_id, Club.all, :id, :name %><br>

    <%= f.hidden_field :user_id, value: session[:user_id] %><br>

    <%= f.label :date %><br>
    <%= f.date_field :date %><br>

    <br>

    <%= f.label :price %><br>
    <%= f.number_field :price %><br>

    <br>
    
    <%= f.submit "Book A Gig" %>
<% end %>
</div>
