<% if flash[:gig_errors] %>
    <% flash[:gig_errors].each do |error| %>
        <div style="color: red"><%= error %></div>
    <% end %>
<% end %>

<%= form_for(@gig) do |f| %>
    <%= f.label :club %>
    <%= f.collection_select :club_id, Club.all, :id, :name %>

    <%= f.hidden_field :user_id, value: session[:user_id] %>

    <%= f.label :date %>
    <%= f.date_field :date %>

    <%= f.label :price %>
    <%= f.number_field :price %>
    
    <%= f.submit "Book A Gig" %>
<% end %>

