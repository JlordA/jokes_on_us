<h1 style="text-align:center"><%= @club.name %></h1>


<p style="text-align:center">Address: <%= @club.address %></p>
<p style="text-align:center">Description: <%= @club.description %></p>
    
<p  style="text-align:center"> <img  src=<%= @club.pic%> height="500"></p>


<h3 style="text-align:center">Reviews </h3>

<% @club.reviews.each do |review| %><br>
    <p style="text-align:center">Rating : <%= review.rating %> star<br>
    <p style="text-align:center">Content : <%= review.content %><br>
    <p style="text-align:center"> <%= review.date %><br>
<% end %>




