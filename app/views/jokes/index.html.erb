<h1 style="text-align: center">Jokes</h1>

<div>

    <%@sorted_jokes = @jokes.sort_by {|joke|joke.like}.reverse %>
    <% @sorted_jokes.each do |joke| %>
      
        <p style="text-align: center"> <%= link_to joke.content, joke_path(joke) %>  - <%= link_to joke.user.name, user_path(joke.user) %></b>  <b>Likes: </b><%= joke.like %> <b>Dislikes: </b><%= joke.dislike %></p>

        

        <div style="text-align: center"> 

        
        <%= button_to "👍", like_path(joke), method: :patch %>
        <%= button_to "👎", dislike_path(joke), method: :patch %>
        
      
    <% end %>
 </div>