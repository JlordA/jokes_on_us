<div  style="text-align: center">
<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    <% end %>
</div>

<div  style="text-align: center">
<%= form_for(@review) do |f| %>

    <%= f.hidden_field :club_id, value: @club.id %><br>
    
    <%= f.label :rating %><br>
    <%= f.number_field :rating %><br>

    <%= f.label :date %><br>
    <%= f.date_field :date %><br>

    <%= f.label :content %><br>
    <%= f.text_field :content %><br>
    
    <%= f.submit %>
  <% end %>
</div>